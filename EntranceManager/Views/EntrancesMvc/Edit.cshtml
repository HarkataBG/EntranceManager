@model EntranceDto

<h2>Редактирай вход</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <div class="form-group mb-3">
        <label asp-for="EntranceName" class="form-label">Име на входа</label>
        <input asp-for="EntranceName" class="form-control" />
        <span asp-validation-for="EntranceName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="City" class="form-label">Град</label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Address" class="form-label">Адрес</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PostCode" class="form-label">Пощенски код</label>
        <input asp-for="PostCode" class="form-control" type="number" />
        <span asp-validation-for="PostCode" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="CountChildrenAsResidents" class="form-check-input" type="checkbox" id="countChildren" />
        <label asp-for="CountChildrenAsResidents" class="form-check-label">Брой деца се брои като жители</label>
        <span asp-validation-for="CountChildrenAsResidents" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Запази</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Отказ</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}