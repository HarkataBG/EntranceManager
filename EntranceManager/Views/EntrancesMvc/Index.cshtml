@model IEnumerable<EntranceResponseDto>

<h2>Входове</h2>

<table class="table">
    <thead>
        <tr>
            <th>Име</th>
            <th>Адрес</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entrance in Model)
        {
            <tr>
                <td>@entrance.EntranceName</td>
                <td>@entrance.Address</td>
                <td>
                    @if (User.IsInRole("Administrator"))
                    {
                        <a asp-action="Edit" asp-route-id="@entrance.Id" class="btn btn-warning btn-sm">Редактирай</a>
                        <a asp-action="Delete" asp-route-id="@entrance.Id" class="btn btn-danger btn-sm">Изтрий</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("Administrator"))
{
    <a asp-action="Create" class="btn btn-primary">Създай нов вход</a>
}