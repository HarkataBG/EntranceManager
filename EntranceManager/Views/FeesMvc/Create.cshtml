@model EntranceManager.Models.Mappers.FeeDto

@{
    ViewData["Title"] = "Добавяне на нова такса";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Име на таксата</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Описание</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Amount" class="form-label">Сума</label>
        <input asp-for="Amount" type="number" step="0.01" min="0" class="form-control" required />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EntranceId" class="form-label">Вход</label>
        <select asp-for="EntranceId" asp-items="ViewBag.Entrances" class="form-select" required>
            <option value="">-- Изберете вход --</option>
        </select>
        <span asp-validation-for="EntranceId" class="text-danger"></span>
    </div>

    <h4>Детайли на таксата</h4>

    <div class="mb-3">
        <label asp-for="FeeDetails.ApartmentRatio" class="form-label">Apartment Ratio</label>
        <input asp-for="FeeDetails.ApartmentRatio" type="number" step="0.01" min="0" class="form-control" />
        <span asp-validation-for="FeeDetails.ApartmentRatio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FeeDetails.ResidentRatio" class="form-label">Resident Ratio</label>
        <input asp-for="FeeDetails.ResidentRatio" type="number" step="0.01" min="0" class="form-control" />
        <span asp-validation-for="FeeDetails.ResidentRatio" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="FeeDetails.IsFeeForCleaning" class="form-check-input" type="checkbox" />
        <label asp-for="FeeDetails.IsFeeForCleaning" class="form-check-label">Такса за почистване</label>
    </div>

    <div class="form-check mb-3">
        <input asp-for="FeeDetails.IsFeeWithChildrenReduction" class="form-check-input" type="checkbox" />
        <label asp-for="FeeDetails.IsFeeWithChildrenReduction" class="form-check-label">Такса с намаление за деца</label>
    </div>

    <div class="mb-3">
        <label asp-for="FeeDetails.PetFeePercentage" class="form-label">Процент за домашни любимци</label>
        <input asp-for="FeeDetails.PetFeePercentage" type="number" step="0.01" min="0" max="100" class="form-control" />
        <span asp-validation-for="FeeDetails.PetFeePercentage" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FeeDetails.ChildDiscountPercentage" class="form-label">Процент намаление за деца</label>
        <input asp-for="FeeDetails.ChildDiscountPercentage" type="number" step="0.01" min="0" max="100" class="form-control" />
        <span asp-validation-for="FeeDetails.ChildDiscountPercentage" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="FeeDetails.Normalize" class="form-check-input" type="checkbox" />
        <label asp-for="FeeDetails.Normalize" class="form-check-label">Нормализиране</label>
    </div>

    <button type="submit" class="btn btn-primary">Създай такса</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}