@model ApartmentDto

<h2>Създай апартамент</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Number"></label>
        <input asp-for="Number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EntranceId"></label>
        <input asp-for="EntranceId" class="form-control" />
        <span asp-validation-for="EntranceId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OwnerUserId"></label>
        <input asp-for="OwnerUserId" class="form-control" />
        <span asp-validation-for="OwnerUserId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Запази</button>
</form>